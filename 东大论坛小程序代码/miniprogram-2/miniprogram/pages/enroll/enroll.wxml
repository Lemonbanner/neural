<!--pages/enroll/enroll.wxml-->
<view class="backgroud">
  <view class="first">
    <input id="name" placeholder="请输入用户名" placeholder-class="plas" class="inputs" type="text" bindinput="usernameInput"></input>
  </view>
  <view class="second">
    <input id="phonenumber" placeholder="请输入手机号" placeholder-class="plas" class="inputs" type="number" bindinput="phonenumberInput"></input>
  </view>
  <view class="second">
    <input id="psw" placeholder="请输入登录密码" placeholder-class="plas" class="inputs" type="password" bindinput="passwordInput"></input>
  </view>
  <view id="pswack" class="second">
    <input placeholder="重复输入密码" placeholder-class="plas" class="inputs" type="password" bindinput="passwordInputAck"></input>
  </view>
  <view class="click" bindtap="regist">注册</view>
  <view class="cha" bindtap="signin">
    <text class="no">已有账号，点此登录</text>
  </view>
</view>